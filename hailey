                    No (Don't Click)
                </button>
            </div>
        </div>
    </div>

    <div class="celebration" id="celebration">
        <div class="celebration-content">
            <img class="celebration-image" src="images/cat2.jpg" alt="Celebration">
            <h2>üéâ Yay! üéâ</h2>
            <p>You just made me the happiest! üíï</p>
            <p>Can't wait to celebrate with you & give you a million kisses! üåπ</p>
            <div class="emoji-burst">üíù‚ú®üíñüéäüíï</div>
        </div>
    </div>

    <script>
        // Create sparkles
        const sparklesContainer = document.getElementById('sparkles');
        for (let i = 0; i < 50; i++) {
            const sparkle = document.createElement('div');
            sparkle.className = 'sparkle';
            sparkle.style.left = Math.random() * 100 + '%';
            sparkle.style.top = Math.random() * 100 + '%';
            sparkle.style.animationDelay = Math.random() * 3 + 's';
            sparklesContainer.appendChild(sparkle);
        }

        // Create floating hearts
        const heartsContainer = document.getElementById('hearts');
        const heartEmojis = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíù', 'üíò'];
        
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.textContent = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
            heart.style.fontSize = (Math.random() * 20 + 20) + 'px';
            heartsContainer.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 7000);
        }

        setInterval(createHeart, 500);

        // Button interactions
        let noButtonMoves = 0;
        const noButton = document.querySelector('.btn-no');
        
        function moveNoButton() {
            noButtonMoves++;
            
            // Make button absolutely positioned after first move
            if (noButtonMoves === 1) {
                noButton.classList.add('moving');
            }
            
            const container = noButton.parentElement;
            const yesButton = document.querySelector('.btn-yes');
            const containerRect = container.getBoundingClientRect();
            const buttonRect = noButton.getBoundingClientRect();
            const yesButtonRect = yesButton.getBoundingClientRect();
            
            // Calculate safe boundaries within the container
            const maxX = containerRect.width - buttonRect.width - 40;
            const maxY = containerRect.height - buttonRect.height - 40;
            
            let randomX, randomY;
            let attempts = 0;
            
            // Keep trying positions until we find one that doesn't overlap with Yes button
            do {
                randomX = Math.random() * maxX + 20;
                randomY = Math.random() * maxY + 20;
                
                // Calculate absolute positions for overlap check
                const noLeft = containerRect.left + randomX;
                const noRight = noLeft + buttonRect.width;
                const noTop = containerRect.top + randomY;
                const noBottom = noTop + buttonRect.height;
                
                // Check if this position overlaps with Yes button (with extra spacing)
                const overlap = !(noRight + 30 < yesButtonRect.left || 
                                noLeft - 30 > yesButtonRect.right || 
                                noBottom + 20 < yesButtonRect.top || 
                                noTop - 20 > yesButtonRect.bottom);
                
                if (!overlap) break;
                attempts++;
            } while (attempts < 50); // Max attempts to avoid infinite loop
            
            noButton.style.left = randomX + 'px';
            noButton.style.top = randomY + 'px';
            
            const messages = [
                "Wait! üòÖ",
                "Come on! üíï",
                "Really? ü•∫",
                "The Yes button won't run away! üëâ",
                "I'm not going to stop moving! üòÑ",
                "Just say Yes! üíñ"
            ];
            
            if (noButtonMoves <= messages.length) {
                noButton.textContent = messages[noButtonMoves - 1];
            }
        }
        
        // Add hover event
        noButton.addEventListener('mouseenter', moveNoButton);
        
        // Also move on touch for mobile
        noButton.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveNoButton();
        });

        function celebrate() {
            const celebration = document.getElementById('celebration');
            celebration.classList.add('active');
            
            // Create confetti effect
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    createConfetti();
                }, i * 30);
            }
        }

        function createConfetti() {
            const confetti = document.createElement('div');
            const emojis = ['üíñ', 'üíï', 'üíù', '‚ú®', 'üåπ', 'üíó', 'üéä', 'üéâ'];
            confetti.textContent = emojis[Math.floor(Math.random() * emojis.length)];
            confetti.style.position = 'fixed';
            confetti.style.left = Math.random() * 100 + '%';
            confetti.style.top = '-50px';
            confetti.style.fontSize = (Math.random() * 30 + 20) + 'px';
            confetti.style.pointerEvents = 'none';
            confetti.style.zIndex = '1001';
            confetti.style.animation = `float ${Math.random() * 2 + 3}s ease-in-out`;
            document.body.appendChild(confetti);
            
            setTimeout(() => {
                confetti.remove();
            }, 5000);
        }
    </script>
</body>
