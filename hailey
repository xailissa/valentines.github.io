    <!-- Sparkles background -->
    <div id="sparkles"></div>
    
    <!-- Floating hearts -->
    <div id="hearts"></div>

    <div class="container">
        <div class="header">
            <h1>üíù Valentine's Day üíù</h1>
        </div>

        

        <div class="card">
            <img id="questionImage" class="question-image" src="images/cat1.jpg" alt="Cute animation">
            
            <div class="message">
